<?xml version="1.0" encoding="utf-8"?>

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_margin="@dimen/standard_margin2"
            android:text="Create Account"
            android:textColor="@color/colorPrimaryDark"
            android:textSize="30dp"
            android:typeface="serif" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="phone number"
            android:layout_marginRight="@dimen/standard_margin2"
            android:layout_marginLeft="@dimen/standard_margin2"/>

        <EditText
            android:id="@+id/phone_number_box2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="@dimen/standard_margin1"
            android:layout_marginBottom="@dimen/standard_margin1"
            android:layout_marginRight="@dimen/standard_margin2"
            android:layout_marginLeft="@dimen/standard_margin2"
            android:hint="09121234567" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="password"
            android:layout_marginRight="@dimen/standard_margin2"
            android:layout_marginLeft="@dimen/standard_margin2"/>

        <EditText
            android:id="@+id/password_box2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="@dimen/standard_margin1"
            android:layout_marginBottom="@dimen/standard_margin1"
            android:layout_marginLeft="@dimen/standard_margin2"
            android:layout_marginRight="@dimen/standard_margin2"
            android:inputType="textPassword" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="confirm password"
            android:layout_marginRight="@dimen/standard_margin2"
            android:layout_marginLeft="@dimen/standard_margin2"/>

        <EditText
            android:id="@+id/confirm_Password_box"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="@dimen/standard_margin1"
            android:layout_marginBottom="@dimen/standard_margin1"
            android:layout_marginRight="@dimen/standard_margin2"
            android:layout_marginLeft="@dimen/standard_margin2"
            android:inputType="textPassword" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="email"
            android:layout_marginRight="@dimen/standard_margin2"
            android:layout_marginLeft="@dimen/standard_margin2"/>

        <EditText
            android:id="@+id/email_box"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:hint="email@gmail.com"
            android:layout_marginTop="@dimen/standard_margin1"
            android:layout_marginBottom="@dimen/standard_margin1"
            android:layout_marginLeft="@dimen/standard_margin2"
            android:layout_marginRight="@dimen/standard_margin2"
            android:inputType="textEmailAddress" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="city"
            android:layout_marginRight="@dimen/standard_margin2"
            android:layout_marginLeft="@dimen/standard_margin2"/>

        <Spinner
            android:id="@+id/spinner"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/standard_margin1"
            android:layout_marginBottom="@dimen/standard_margin1"
            android:layout_marginRight="@dimen/standard_margin2"
            android:layout_marginLeft="@dimen/standard_margin2" />

       <LinearLayout
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           android:orientation="vertical">

           <Button
               android:id="@+id/register_button"
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               android:background="@drawable/text_input_border"
               android:layout_marginRight="@dimen/standard_margin2"
               android:layout_marginLeft="@dimen/standard_margin2"
               android:layout_marginTop="@dimen/standard_margin3"
               android:text="Create account"
               android:textColor="@color/textColorPrimary" />

       </LinearLayout>


    </LinearLayout>